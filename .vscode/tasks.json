{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "update database context",
			"type": "shell",
			"command": "npx vlquery create-context",
			"options": {
				"cwd": "server/",
				"env": {
					"PGHOST": "data1.w6.cloud.acryps.com",
					"PGUSER": "acryps_events",
					"PGPASSWORD": "acryps_events",
					"PGDATABASE": "acryps_events"
				}
			},
			"problemMatcher": []
		},
		{
			"label": "update endpoints",
			"type": "shell",
			"command": "npx vlserver compile",
			"options": {
				"cwd": "server/"
			},
			"problemMatcher": []
		},
		{
			"label": "upgrade version",
			"dependsOn": [
				"build"
			],
			"type": "shell",
			"command": "npm version ${input:version-type}",
			"problemMatcher": []
		},
		{
			"label": "build",
			"type": "shell",
			"command": "./build",
			"problemMatcher": []
		},
		{
			"label": "publish PROD",
			"dependsOn": [
				"upgrade version"
			],
			"type": "shell",
			"command": "vlc2 deploy -c w6.cloud.acryps.com -e productive",
			"problemMatcher": []
		},
		{
			"label": "publish TEST",
			"dependsOn": [
				"upgrade version"
			],
			"type": "shell",
			"command": "vlc2 deploy -c w6.cloud.acryps.com -e test",
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "version-type",
			"type": "pickString",
			"description": "version type",
			"default": "patch",
			"options": [
				"patch",
				"minor",
				"major"
			]
		}
	]
}